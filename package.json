{
  "name": "notamud",
  "version": "0.0.1",
  "description": "A MUD for Node and Websockets",
  "main": "./server/index.js",
  "scripts": {
    "go": "node ./build/index.js",
    "build": "npm run-script clean && npm run-script build-server && npm run-script build-client && npm run-script copy-data",
    "clean": "rimraf ./build",
    "build-server": "tsc --project ./src/server/tsconfig.json",
    "build-client": "webpack --config ./src/client/webpack.config.js",
    "copy-data": "copyfiles -e ./**/tsconfig.json -u 2 ./src/server/**/*.json ./build && copyfiles -u 2 ./src/client/**/*.html ./build/public",
    "test": "test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/RonPenton/NotaMUD.git"
  },
  "keywords": [
    "MUD"
  ],
  "author": "Ron Penton",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/RonPenton/NotaMUD/issues"
  },
  "homepage": "https://github.com/RonPenton/NotaMUD#readme",
  "devDependencies": {
    "@types/express": "^4.0.36",
    "@types/node": "^8.0.22",
    "@types/react": "^16.0.2",
    "@types/react-dom": "^15.5.3",
    "@types/socket.io": "^1.4.29",
    "copyfiles": "^1.2.0",
    "express": "^4.15.4",
    "extract-text-webpack-plugin": "^3.0.0",
    "react": "^15.6.1",
    "react-dom": "^15.6.1",
    "rimraf": "^2.6.1",
    "socket.io": "^2.0.3",
    "ts-loader": "^2.3.2",
    "typescript": "^2.4.2",
    "webpack": "^3.5.4"
  }
}
